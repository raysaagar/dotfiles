[alias]
  br = branch
  co = checkout
  l = log
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  s = status
  cam = commit -am
  sur = submodule update --recursive
  sfp = submodule foreach git pull origin master

